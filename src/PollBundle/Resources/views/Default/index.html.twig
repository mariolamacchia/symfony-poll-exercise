{% extends 'personal.html.twig' %}

{% block content %}
<div class="container">
    <h1 class="light-blue-text text-darken-1">Polls</h1>

    {% if openPolls | length %}
        <h3 class="light-blue-text text-darken-1">Active</h3>
        <div class="collection black-text">
            {% for poll in openPolls %}
                <div class="collection-item">
                    {{ poll.name }}
                    <a href="{{ url('poll_default_singlepoll', {pollId: poll.id}) }}"
                        class="secondary-content">
                        Open
                    </a>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    {% if closedPolls | length %}
        <h3 class="light-blue-text text-darken-1">Closed</h3>
        <div class="collection black-text">
            {% for poll in closedPolls %}
                <div class="collection-item">
                    {{ poll.name }}
                    <a href="{{ url('poll_default_singlepoll', {pollId: poll.id}) }}"
                        class="secondary-content">
                        Open
                    </a>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
